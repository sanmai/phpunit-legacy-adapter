{
    "name": "sanmai/phpunit-legacy-adapter",
    "type": "library",
    "description": "PHPUnit Legacy Versions Adapter",
    "license": "Apache-2.0",
    "authors": [
        {
            "name": "Alexey Kopytko",
            "email": "alexey@kopytko.com"
        }
    ],
    "require": {
        "php": "<8.1",
        "phpunit/phpunit": "^4.8.35 || ^5 || ^6"
    },
    "require-dev": {
        "friendsofphp/php-cs-fixer": "^2"
    },
    "config": {
        "sort-packages": true
    },
    "extra": {
        "branch-alias": {
            "dev-master": "8.x-dev",
            "dev-legacy": "6.x-dev"
        }
    },
    "autoload": {
        "psr-4": {
            "LegacyPHPUnit\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\LegacyPHPUnit\\": "tests/"
        }
    }
}
